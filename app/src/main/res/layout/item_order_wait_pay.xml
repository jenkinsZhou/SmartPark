<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12">
    <!--代缴费订单-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/ic_checked_blue_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llOrderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:minWidth="@dimen/dp_206"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_locate_small_yello"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="停车位置"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="宜兴停车场"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@mipmap/ic_alarm_small_yello"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="通知时间"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_8"
                    android:minWidth="@dimen/dp_120"
                    android:text="2020-09-10  12:00"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@mipmap/ic_money_small_yellow"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="计费金额"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="0.00元"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_money_small_yellow"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="计费金额"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="0.00元"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_select_primary_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="继续计费"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/bg_select_primary_blue"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="确认结束"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/llOrderInfo"
            android:layout_alignBottom="@id/llOrderInfo"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="A01001" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_11"
                android:src="@mipmap/ic_car_gray_small" />


            <TextView
                android:id="@+id/tvPlantNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_2_5"
                android:background="@drawable/bg_radius_30_primary"
                android:paddingStart="@dimen/dp_11"
                android:paddingTop="@dimen/dp_3_5"
                android:paddingEnd="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_3_5"
                android:text="苏B·A3456"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
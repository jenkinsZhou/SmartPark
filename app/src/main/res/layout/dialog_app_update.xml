<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_bg_update"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/textBlackStyle14"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_143"
            android:text="发现新版本" />

        <TextView
            android:id="@+id/tvContent"
            style="@style/textBlackStyle12"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="V1.1.2"
            android:textColor="@color/blue629BFF" />

        <TextView
            android:id="@+id/tvPositive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginBottom="@dimen/dp_24"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_select_primary_blue"
            android:gravity="center"
            android:letterSpacing="0.18"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
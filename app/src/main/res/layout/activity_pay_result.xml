<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar" />

    <ImageView
        android:id="@+id/ivPayStatus"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_pay_success"
        android:layout_width="@dimen/dp_95"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/menuTextStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_18"
        android:text="本次停车费已支付成功"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
      android:textSize="@dimen/sp_13"
        android:layout_gravity="center_horizontal"
        android:textColor="#A2A2A2"
        android:layout_marginTop="@dimen/dp_18"
        android:text="应收费用20.00元  实收费用20.00元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        style="@style/buttonMatchWidthBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginEnd="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_28"
        android:background="@drawable/bg_select_primary"
        android:text="确认" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!-- 侧滑菜单左侧部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--消息部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:src="@mipmap/ic_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_msg_circle_blue"
                android:gravity="center"
                android:text="21"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_7" />
        </RelativeLayout>
        <!--头像部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_12">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:src="@drawable/ic_avatar_default" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ivAvatar"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/ivAvatar"
                android:text="张三／9527"
                android:textColor="@color/colorBlackTitle"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvUserWorkTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivAvatar"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/ivAvatar"
                android:drawableStart="@mipmap/ic_work_time"
                android:drawablePadding="@dimen/dp_3"
                android:text="2小时0分10秒"
                android:textColor="@color/colorGraySmallText"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvUserWorkTime"
                android:layout_below="@id/tvUserName"
                android:layout_alignStart="@id/tvUserName">

                <TextView
                    android:id="@+id/tvUserLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableStart="@mipmap/ic_location"
                    android:drawablePadding="@dimen/dp_3"
                    android:text="宜兴停车场"
                    android:textColor="@color/colorGraySmallText"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

        </RelativeLayout>

        <!--签到签出-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_select_primary_green"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:text="上班签到"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tvSignOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/bg_select_primary_blue"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:text="下班签出"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <!--收入情况-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bg_radius_4_blue_7eadff"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTotalCarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="总车次"
                    android:textColor="#CFF1FF"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTheoreticalIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="应收(元)"
                    android:textColor="#CFF1FF"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvActualIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="实收(元)"
                    android:textColor="#CFF1FF"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <!--收费日报-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_42"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHomeReportFee"
                style="@style/menuTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@mipmap/ic_fee_report"
                android:drawablePadding="@dimen/dp_7"
                android:text="收费日报" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_11"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_arrow_right_gray_small" />
        </LinearLayout>

        <!--欠费记录-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHomeArrears"
                style="@style/menuTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@mipmap/ic_arrears_record"
                android:drawablePadding="@dimen/dp_7"
                android:text="欠费记录" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_11"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_arrow_right_gray_small" />
        </LinearLayout>


        <!--软件更新-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_radius_10_gray_f0f5ff"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                style="@style/menuTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@mipmap/ic_app_update"
                android:drawablePadding="@dimen/dp_7"
                android:text="软件更新" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_arrow_right_gray_small" />
        </LinearLayout>


        <!--软件更新-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHomeEditPass"
                style="@style/menuTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@mipmap/ic_setting"
                android:drawablePadding="@dimen/dp_7"
                android:text="修改密码" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_11"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_arrow_right_gray_small" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15">

            <TextView
                android:id="@+id/tvLogout"
                style="@style/menuTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:drawableStart="@mipmap/ic_logout"
                android:drawablePadding="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="退出登录"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_above="@id/tvLogout"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@color/grayDDDDDD" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>